<?xml version="1.0" encoding="UTF-8"?>
<zk xmlns="http://www.zkoss.org/2005/zk/config"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zk/config http://www.zkoss.org/2005/zk/config/zk.xsd">

	<preference>
		<name>org.zkoss.zk.ui.WebApp.name</name>
		<value>portlet demo</value>
	</preference>
	<client-config>
		        <debug-js>true</debug-js>
		<!--        <enable-source-map>true</enable-source-map>-->
		<!--        <auto-resend-timeout>3000</auto-resend-timeout>-->
	</client-config>
	<!-- liferay requires a serializable session -->
	<system-config>
		<ui-factory-class>org.zkoss.zk.ui.http.SerializableUiFactory</ui-factory-class>
	</system-config>
</zk>
